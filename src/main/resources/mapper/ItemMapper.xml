<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.barogagi.item.query.mapper.ItemMapper">

    <!-- resultMap -->

    <!-- Select Query -->
    <select id="selectItemNmBy" parameterType="int" resultType="String">
        <![CDATA[
        SELECT
                ITEM_NM
        FROM    ITEM
        WHERE   ITEM_NUM = #{itemNum}
        ]]>
    </select>

    <select id="selectItemList" parameterType="int" resultType="com.barogagi.item.query.vo.ItemVO">
        <![CDATA[
        SELECT
              ITEM_NM as itemNm
            , ITEM_NUM as itemNum
        FROM    ITEM
        WHERE   CATEGORY_NUM = #{categoryNum}
        ORDER BY ITEM_NUM ASC
        ]]>
    </select>


</mapper>
