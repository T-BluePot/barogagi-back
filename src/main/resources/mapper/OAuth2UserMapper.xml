<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.barogagi.member.oauth.join.mapper.OAuth2UserMapper">
    <select id="findByOAuthSub" parameterType="com.barogagi.member.oauth.join.dto.OAuth2UserDTO" resultType="com.barogagi.member.oauth.join.dto.OAuth2UserDTO">
        SELECT USER_ID, EMAIL, NICKNAME, JOIN_TYPE
        FROM   USER_MEMBERSHIP_INFO
        WHERE  USER_ID = #{sub}
        AND    EMAIL = #{email}
        AND    JOIN_TYPE = #{joinType}
    </select>
</mapper>
